## GENOME
#########################################################################

ORG = Mouse
BUILD = mm10

#########################################################################
## WORKFLOW
#########################################################################

## Run FastqQC 0/1
RUN_FASTQC = 0

## STAR or TOPHAT2
MAPPING_TOOL = STAR

## STAR or HTSEQ or FEATURECOUNTS
COUNT_TOOL = STAR

#########################################################################
## Data
#########################################################################

# must be "no", "yes", or "reverse"
STRANDED = 

#########################################################################
## Define Options
#########################################################################

## Mapping on rRNA - Do not set to skip
BOWTIE_RRNA_INDEX = /data/annotations/pipelines/Mouse/rRNA/rRNA_mouse_complete
BOWTIE_OPTS = -v 2 -a -m 1 --best --strata --nomaqround -y

## Mapping on genome
STAR_INDEX = /data/annotations/pipelines/Mouse/mm10/indexes/STAR/
STAR_OPTS = --outFilterType BySJout --outFilterMultimapNmax 20 --outFilterMismatchNmax 999 --outFilterMismatchNoverLmax 0.04 --outSAMprimaryFlag OneBestScore --outMultimapperOrder Random --outSAMattributes All

TOPHAT2_INDEX = /data/annotations/pipelines/Mouse/mm10/indexes/bowtie2/mm10
TOPHAT2_OPTS =  --b2-sensitive -g 1 -N 2 --no-coverage-search

## Count gene expression
ANNOT_DIR = /data/annotations/pipelines/Mouse/mm10/gtf/parseGTFAnnotation/
TRANSCRIPTS_GTF = /data/annotations/pipelines/Mouse/mm10/gtf/gencode.vM13.annotation.gtf
HTSEQ_OPTS = -f bam -t exon -r pos 
FEATURECOUNTS_OPTS = -t exon -C -p

## RSeqQC
BOWTIE2_INDEX = /data/annotations/pipelines/Mouse/mm10/indexes/bowtie2/mm10
GENE_BED = /data/annotations/pipelines/Mouse/mm10/gtf/parseGTFAnnotation/gencode.vM13.annotation_gene.bed
