/*
 * Institut Curie configuration profile
 * Edit your own configurations to use the pipeline on your infrastructure
 */

/*
 * -------------------------------------------------
 * Define Singularity path for `-profile singularity`
 * -------------------------------------------------
 */

params {
  container_version = '2.0'
  containerPath = "/bioinfo/local/curie/ngs-data-analysis/centos/tools/containers/singularity/rnaseq-${params.container_version}/images"
}

/*
 * -----------------------------------------------
 * Define your annotation folder
 * -----------------------------------------------
 */

params.igenomes_base = "/data/annotations/pipelines/"

/*
 * -----------------------------------------------
 * Additional local profiles
 * ----------------------------------------------
 */

profiles {

  condaPath {
    singularity {
       enabled = false
    }

    process {
       beforeScript = "export PATH=/bioinfo/local/curie/ngs-data-analysis/centos/tools/conda/envs/rnaseq-${params.container_version}/bin:$PATH"
    }
  }
}
